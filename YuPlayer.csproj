<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <UseWindowsForms>True</UseWindowsForms>
    <ApplicationIcon>YMCL-Icon.ico</ApplicationIcon>
    <Title>YuPlayer</Title>
    <Authors>DaiYu</Authors>
    <Copyright>DaiYu | https://daiyu.fun/</Copyright>
    <Description>DaiYu | https://daiyu.fun/</Description>
    <PackageIcon>YMCL-Icon.png</PackageIcon>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="YMCL-Icon.ico" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\YMCL\Assets\YMCL-Icon.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="iNKORE.UI.WPF.Modern" Version="0.9.26.1" />
  </ItemGroup>

</Project>
